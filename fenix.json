            "id": "easycppprojects-gcc-linux",
            "displayName": "[G++/GDB] C++ Linux",
            "description": "Create a C++ project structure for GCC with Makefile",
            "language": "C++",
            "category": [
                "Programming"
            ],
            "img": "https://upload.wikimedia.org/wikipedia/commons/1/18/ISO_C%2B%2B_Logo.svg",
            "directories": [
                ".vscode",
                "bin",
                "include",
                "lib",
                "src"
            ],
            "files": {
                "download": [{
                        "from": "cpp/main.cpp",
                        "to": "src/main.cpp"
                    },
                    {
                        "from": "cpp/Makefile",
                        "to": "Makefile"
                    },
                    {
                        "from": "cpp/tasks.json",
                        "to": ".vscode/tasks.json"
                    },
                    {
                        "from": "cpp/gdb-launch.json",
                        "to": ".vscode/launch.json"
                    }
                ],
                "open": [
                    "src/main.cpp"
                ]
            },
            "command": "make run"
        },
